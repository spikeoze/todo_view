// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int              @id @default(autoincrement())
  username  String           @unique
  email     String           @unique
  password  String
  bio       String?          @db.VarChar(150)
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")
  Posts     Posts[]
  Comments  Comments[]
  Likes     Likes[]
  followers User_Followers[] @relation("follower")
  following User_Followers[] @relation("following")

  @@map("users")
}

model User_Followers {
  id          Int @id @default(autoincrement())
  user_id     Int
  follower_id Int

  follower  Users @relation(name: "follower", fields: [user_id], references: [id])
  following Users @relation(name: "following", fields: [follower_id], references: [id])

  @@map("user_followers")
}

model Posts {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(150)
  content   String   @db.VarChar(500)
  user_id   Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  author   Users      @relation(fields: [user_id], references: [id])
  Likes    Likes[]
  Comments Comments[]

  @@map("posts")
}

model Comments {
  id        Int      @id @default(autoincrement())
  text      String   @db.VarChar(300)
  user_id   Int
  post_id   Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  author Users @relation(fields: [user_id], references: [id])
  post   Posts @relation(fields: [post_id], references: [id])

  @@map("comments")
}

model Likes {
  id      Int @id @default(autoincrement())
  user_id Int
  post_id Int

  author Users @relation(fields: [user_id], references: [id])
  post   Posts @relation(fields: [post_id], references: [id])

  @@map("likes")
}
